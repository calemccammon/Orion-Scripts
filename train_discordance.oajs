function trainDiscordance() {
	Orion.Ignore(self);
    var target = Orion.FindType("-1", "-1", "ground", "near|live", 18, "blue|gray|criminal|orange|red");
    if (target.length != 0) {
		 Orion.UseSkill('Discordance');
		 Orion.WaitTargetObject(target[0]);
    }
    Orion.Wait(8000);
    Orion.IgnoreReset();
    trainDiscordance();
}